<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activities.Registration">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/opensans"
                android:gravity="center"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:text="Registration"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:fontFamily="@font/opensans"
                    android:text="Name *"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/greyrectangle"
                    android:fontFamily="@font/opensans"
                    android:hint="Enter name"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="#B2BEB5"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:fontFamily="@font/opensans"
                    android:text="Username *"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/username"
                    android:textColorHint="#B2BEB5"
                    android:hint="Can't be Changed"
                    android:background="@drawable/greyrectangle"
                    android:fontFamily="@font/opensans"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:fontFamily="@font/opensans"
                    android:text="Favourite Game *"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/game"
                    android:background="@drawable/greyrectangle"
                    android:fontFamily="@font/opensans"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:fontFamily="@font/opensans"
                    android:text="Gaming Channel"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/greyrectangle"
                    android:id="@+id/channel"
                    android:fontFamily="@font/opensans"
                    android:hint="Youtube or Instagram  (optional)"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="#B2BEB5"
                    android:textSize="14dp" />


            </LinearLayout>


            <Button
                android:id="@+id/save"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/red"
                android:padding="16dp"
                android:text="Save &amp; Continue"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:cornerRadius="5dp" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>